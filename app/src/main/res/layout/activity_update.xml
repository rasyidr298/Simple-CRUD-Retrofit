<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:layout_gravity="center"
    tools:context=".Activity.UpdateActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Nim"/>
                <TextView
                    android:layout_width="0dp"
                    android:text=":"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
                <EditText
                    android:id="@+id/etNimUp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Nama"/>
                <TextView
                    android:layout_width="0dp"
                    android:text=":"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>

                <EditText
                    android:id="@+id/etNamaUp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Kelas"/>
                <TextView
                    android:layout_width="0dp"
                    android:text=":"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
                <EditText
                    android:id="@+id/etKelasUp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/rbSesiUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rbPagiUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pagi (09.00-11.00 WIB)"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbSiangUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siang (13.00-15.00 WIB)" />

            </RadioGroup>

            <Button
                android:id="@+id/btUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>